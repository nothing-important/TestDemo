<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F3F4F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/bar_title"/>
    <LinearLayout
        android:id="@+id/setting_account"
        android:layout_marginTop="@dimen/x25"
        android:background="@color/white"
        android:paddingLeft="@dimen/x60"
        android:gravity="center"
        android:paddingRight="@dimen/x60"
        android:paddingTop="@dimen/x30"
        android:paddingBottom="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账号设置"
            android:textColor="#606060"
            android:textSize="@dimen/x28"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_wechat"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#E5E5E5"/>
    <LinearLayout
        android:id="@+id/setting_about"
        android:background="@color/white"
        android:paddingLeft="@dimen/x60"
        android:gravity="center"
        android:paddingRight="@dimen/x60"
        android:paddingTop="@dimen/x30"
        android:paddingBottom="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textColor="#606060"
            android:textSize="@dimen/x28"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_wechat"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#E5E5E5"/>
    <LinearLayout
        android:id="@+id/setting_notice"
        android:background="@color/white"
        android:paddingLeft="@dimen/x60"
        android:gravity="center"
        android:paddingRight="@dimen/x60"
        android:paddingTop="@dimen/x30"
        android:paddingBottom="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="消息通知"
            android:textColor="#606060"
            android:textSize="@dimen/x28"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_wechat"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#E5E5E5"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/setting_logout"
        android:layout_marginTop="@dimen/x157"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x125"
        android:layout_marginLeft="@dimen/x35"
        android:layout_marginRight="@dimen/x35"
        android:background="@mipmap/icon_login"
        android:text="退出登录"
        android:textSize="@dimen/x28"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/x36"/>
</LinearLayout>