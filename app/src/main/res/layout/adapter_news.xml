<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x68"
    android:paddingRight="@dimen/x68"
    android:paddingTop="@dimen/x22"
    android:paddingBottom="@dimen/x22"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.nothing.testdemo.view.RoundImageView
            android:id="@+id/home_news_img"
            android:layout_width="@dimen/x198"
            android:layout_height="@dimen/x130"
            android:scaleType="centerCrop"
            app:imageViewType="round"
            app:roundborderRadius="@dimen/x10"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/x28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/home_news_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="园区运营管控一体化"
                android:textStyle="bold"
                android:textColor="#494949"
                android:textSize="@dimen/x20"/>
            <TextView
                android:id="@+id/home_news_desc"
                android:layout_marginTop="@dimen/x16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#494949"
                android:textSize="@dimen/x20"
                android:ellipsize="end"
                android:text="典型围绕智慧园区提供智能化、智慧化、便捷化、流程化的智慧园区全新体验....."/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/x14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_see_nums"/>
                <TextView
                    android:id="@+id/home_news_see"
                    android:layout_marginLeft="@dimen/x14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="895"
                    android:textColor="#C3C5C8"
                    android:textSize="@dimen/x16"/>
                <TextView
                    android:id="@+id/home_news_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2019-6-27   11:00"
                    android:gravity="right"
                    android:textColor="#C3C5C8"
                    android:textSize="@dimen/x16"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x8"
        android:background="#DCDCDC"
        />
</LinearLayout>