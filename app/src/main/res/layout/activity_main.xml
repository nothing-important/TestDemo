<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#DCDCDC"/>
    <RadioGroup
        android:layout_marginTop="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/main_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/main_home_selector"
            android:gravity="center"
            android:text="首页"
            android:textStyle="bold"
            android:textColor="#6B6C6D"
            android:textSize="@dimen/x28"/>
        <RadioButton
            android:id="@+id/main_drive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/main_drive_selector"
            android:gravity="center"
            android:text="驾驶舱"
            android:textStyle="bold"
            android:textColor="#6B6C6D"
            android:textSize="@dimen/x28"/>
        <RadioButton
            android:id="@+id/main_me"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/main_me_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="#6B6C6D"
            android:textStyle="bold"
            android:textSize="@dimen/x28"/>
    </RadioGroup>
</LinearLayout>