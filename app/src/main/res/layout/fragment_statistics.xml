<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/x60"
    android:paddingRight="@dimen/x60"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/statistics_date_pick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x72"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@mipmap/bg_rect_blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年6月"
            android:textColor="@color/white"
            android:textSize="@dimen/x24" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_down"
            android:layout_marginLeft="@dimen/x16"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/x61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出勤统计"
        android:textSize="@dimen/x28"
        android:textStyle="bold"
        android:textColor="#494949"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="出勤天数"
            android:textSize="@dimen/x24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x24"
            android:text="13天"
            android:textColor="#494949"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x20"
        android:textColor="#BFBFBF"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="休息天数"
            android:textSize="@dimen/x24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x24"
            android:text="1天"
            android:textColor="#494949"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x20"
        android:textColor="#BFBFBF"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="迟到"
            android:textSize="@dimen/x24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x24"
            android:text="4次，共10分钟"
            android:textColor="#F03838"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x20"
        android:textColor="#BFBFBF"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="缺卡"
            android:textSize="@dimen/x24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x24"
            android:text="4次"
            android:textColor="#F03838"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x20"
        android:textColor="#BFBFBF"/>
    <TextView
        android:layout_marginTop="@dimen/x55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请统计"
        android:textSize="@dimen/x28"
        android:textStyle="bold"
        android:textColor="#494949"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x317"
        android:orientation="vertical"
        android:background="#F3F4F6"
        android:gravity="center"
        android:layout_marginTop="@dimen/x34">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本月无出勤类申请"
            android:textSize="@dimen/x20"
            android:textColor="#828282"/>
    </LinearLayout>
</LinearLayout>